{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "typedb-studio",
  "version": "3.4.0-rc0",
  "identifier": "com.typedb.studio",
  "build": {
    "beforeDevCommand": "pnpm start",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist/typedb-studio/browser"
  },
  "app": {
    "windows": [
      {
        "title": "TypeDB Studio",
        "width": 1344,
        "height": 768
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": ["msi", "dmg", "deb"],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "windows": {
      "wix": {
        "version": "0.0.340"
      }
    },
    "macOS": {
      "signingIdentity": "-"
    }
  }
}
